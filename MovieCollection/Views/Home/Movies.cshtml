@{
    ViewData["Title"] = "Movies";
}

@model List<NewMovieModel>

<div class="text-center">
    <h1 class="display-4">My Movies</h1>
</div>

<div>
    <table class="table table-bordered table-striped">

        <thead class="font-weight-bold">
            <tr>
                <td>Title</td>
                <td>Category</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited?</td>
                <td>Lent To</td>
                <td>Notes</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating.RatingDescription</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>

                    <td><a asp-controller="Home" asp-action="EditMovie" asp-route-movieId="@x.MovieId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="DeleteMovie" asp-route-movieId="@x.MovieId">Delete</a></td>
                </tr>
            }
        </tbody>

    </table>
</div>